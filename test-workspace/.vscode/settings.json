{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        ".serverless": true,
        "**/__pycache__": true,
        "**/.serverless": true,
        "**/dist": true,
        "**/node_modules": true,
        "yarn-error.log": true,
        "yarn.lock": true,
        "**/__tests__": true,
        "**/__mocks__": true,
        "**/__fixtures__": true,
        "**/*.spec.js": true,
        "**/tests": true
    },
    "settingsSwitcher.lists": {
        "Python Organize imports": {
            "TurnON": {
                "[python]": {
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": "always"
                    }
                }
            },
            "TurnOFF": {
                "[python]": {
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": "never"
                    }
                }
            }
        },
        "Vertical rulers": {
            "Ruler 80": {
                "description": "Cyan ruler line at column 80",
                "editor.rulers": [
                    {
                        "column": 79,
                        "color": "#4f717a"
                    },
                ]
            },
            "Ruler 85": {
                "description": "Yellow ruler line at column 85",
                "editor.rulers": [
                    {
                        "column": 84,
                        "color": "#615f44"
                    },
                ]
            },
            "Ruler 95": {
                "description": "Blue ruler line at column 95",
                "editor.rulers": [
                    {
                        "column": 94,
                        "color": "#00028a"
                    },
                ]
            },
        },
        "Fonts and theme": {
            "Big font dark": {
                "editor.fontSize": 18,
                "workbench.colorTheme": "Default Dark+"
            },
            "Small font light": {
                "editor.fontSize": 10,
                "workbench.colorTheme": "Default Light+"
            },
            "Big font light": {
                "editor.fontSize": 18,
                "workbench.colorTheme": "Default Light+"
            },
            "Medium font dark": {
                "editor.fontSize": 12,
                "workbench.colorTheme": "Default Dark+"
            },
        },
        "Arguments to run python in terminal": {
            "Normal mode": {
                "description": "No args, just run `python script.py`",
                "python.terminal.launchArgs": [
                    ""
                ]
            },
            "Interactive mode": {
                "description": "Keep the opened terminal, run `python -i script.py`",
                "python.terminal.launchArgs": [
                    "-i"
                ]
            },
            "IPython interactive mode": {
                "description": "Use IPython module and keeps open, run `python -m IPython -i script.py`",
                "python.terminal.launchArgs": [
                    "-m",
                    "IPython",
                    "-i"
                ]
            },
        },
        "Markdown prettier rulers": {
            "At 80": {
                "[markdown]": {
                    "editor.wordWrap": "off",
                    "editor.quickSuggestions": {
                        "comments": "off",
                        "strings": "off",
                        "other": "off"
                    },
                    "editor.rulers": [
                        {
                            "column": 80,
                            "color": "#8a8a8a"
                        },
                    ],
                    "prettier.printWidth": 80,
                    "prettier.proseWrap": "always"
                },
            },
            "At 140": {
                "[markdown]": {
                    "editor.wordWrap": "on",
                    "editor.quickSuggestions": {
                        "comments": "on",
                        "strings": "on",
                        "other": "on"
                    },
                    "editor.rulers": [
                        {
                            "column": 140,
                            "color": "#8a8a8a"
                        },
                    ],
                    "prettier.printWidth": 140,
                    "prettier.proseWrap": "always"
                },
            },
        },
        "TestProfiles": {
            "OldSet": {
                "terminal.integrated.profiles.windows": {
                    "first": {
                        "path": "ipython",
                        "overrideName": true,
                        "icon": "debug-start"
                    },
                    "second": {
                        "path": "python",
                        "overrideName": true,
                        "icon": "play"
                    },
                }
            },
            "NewSet": {
                "terminal.integrated.profiles.windows": {
                    "third": {
                        "path": "ipython",
                        "overrideName": true,
                        "icon": "debug-start"
                    },
                    "fourth": {
                        "path": "python",
                        "overrideName": true,
                        "icon": "play"
                    },
                }
            }
        }
    },
    "editor.fontSize": 12,
    "workbench.colorTheme": "Default Dark+",
    "editor.rulers": [
        {
            "column": 200,
            "color": "#00028a"
        }
    ],
    "editor.formatOnSave": false,
    "[markdown]": {
        "editor.wordWrap": "on",
        "files.trimTrailingWhitespace": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.rulers": [
            {
                "column": 140,
                "color": "#8a8a8a"
            }
        ],
        "rewrap.wrappingColumn": 0,
        "prettier.proseWrap": "always",
        "prettier.printWidth": 140,
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        }
    },
    "[python]": {
        "editor.rulers": [
            {
                "column": 80,
                "color": "#8a8a8a"
            }
        ],
    },
    "editor.codeActionsOnSave": {
        "source.organizeImports": "always"
    },
    "terminal.integrated.profiles.windows": {}
}